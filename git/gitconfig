[credential]
  helper = osxkeychain
[filter "lfs"]
  required = true
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
[diff]
  tool = vimdiff
  renames = copies
  submodule = log
  mnemonicprefix = true
  algorithm = patience
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE 
[difftool]
  prompt = false
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[core]
  pager = less -FMRiX
  editor = nvim
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space
  excludesfile = ~/.gitignore-global
  autocrlf = false
[checkout]
  defaultRemote = origin 
[push]
	default = current
[pull]
  rebase = true
[rerere]
  enabled = true
[merge]
  conflictstyle = diff3
[status]
  submodulesummary = 1
[help]
  autocorrect = 15
[init]
  templatedir = ~/.git-template
[submodule]
  recurse = true
