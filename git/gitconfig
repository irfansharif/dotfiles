[alias]
  # Commonly used aliases.
  addp = add --patch
  amend = commit --amend --reuse-message=HEAD
  branches = branch -a
  camend = commit --amend
  co = checkout
  commit = commit -v
  diffs = diff --staged
  discard = !git stash save --keep-index --include-untracked && git stash drop
  graph = log --graph --oneline --all --date=relative --pretty=format:'%C(yellow)%h%Creset %C(red)%d%Creset %s %Cgreen(%cr)%Creset'
  log = log --decorate --graph --relative-date --stat
  names = show --name-only --oneline
  unassume = update-index --no-assume-unchanged
  uncommit = reset --soft HEAD~1
  unstage = reset HEAD --
  # Less so.
  assume = update-index --assume-unchanged
  assumed = !git ls-files -v | grep ^h | cut -c 3-
  snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  snapshots = !git stash list --grep snapshot
  tags = tag -l
  ours = !git checkout --ours $@ && git add $@
  theirs = !git checkout --theirs $@ && git add $@
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = blue bold
  frag = magenta bold
  old = red bold
  new = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[branch "master"]
  # Use `origin` as the default remote on the `master` branch in all cases
  remote = origin
  merge = refs/heads/master
[apply]
  whitespace = fix
