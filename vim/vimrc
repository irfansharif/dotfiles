" Use the Solarized Dark theme, syntax highlighting, using pathogen
set background=dark
colorscheme solarized
syntax on
set autoindent
set expandtab
filetype plugin indent on
let g:solarized_termtrans=1
execute pathogen#infect()

" Make Vim more useful, use OS clipboard
set nocompatible
set clipboard=unnamed

" Change mapleader, tab width
let mapleader=","
set tabstop=2 shiftwidth=2 softtabstop=2

" Ignore case of searches, dynamic highlighting, default global search flag
set ignorecase
set incsearch
set gdefault

" Better command-line completion, fast terminal connections
set wildmenu
set ttyfast

" Donâ€™t add empty newlines at the end of files
set binary
set noeol

" Centralize backups, swapfiles and undo history, skip backups editing files in certain directories
set backupdir=~/.vim/backups
set directory=.,~/.vim/swaps
if exists("&undodir")
	set undodir=~/.vim/undo
endif
set backupskip=/tmp/*,/private/tmp/*

" Skip intro message when starting Vim, show cursor position, don't reset cursor to start of line
set shortmess=atI
set ruler
set nostartofline

" Show the current mode, filename in titlebar, show partial command as being typed
set showmode
set title
set showcmd

" Start scrolling three lines before the horizontal window border
set scrolloff=3

" Strip trailing white space (,ss)
function! StripWhitespace()
	let save_cursor = getpos(".")
	let old_query = getreg('/')
	:%s/\s\+$//e
	call setpos('.', save_cursor)
	call setreg('/', old_query)
endfunction
noremap <leader>ss :call StripWhitespace()<CR>

" Custom mappings
imap jk <Esc>

" Airline settings
set t_Co=256
let g:airline_powerline_fonts=1
let g:airline_theme='solarized'

" Line number settings, git gutter settings
set number
highlight LineNr cterm=NONE ctermbg=NONE
