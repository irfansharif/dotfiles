Pry.config.memory_size = 300
Pry.config.prompt = Pry::SIMPLE_PROMPT
Pry.config.editor = 'vim'

class Object
  # list methods which aren't in superclass
  def local_methods(obj = self)
    (obj.methods - obj.class.superclass.instance_methods).sort
  end
end

class Array
  def self.toy(n=10, &block)
    block_given? ? Array.new(n, &block) : Array.new(n) { |i| i + 1 }
  end
end

class Hash
  def self.toy(n=10)
    Hash[Array.toy(n){ |c| (96 + ( c + 1 )).chr.to_sym }.zip(Array.toy(n))]
  end
end

Pry::Commands.create_command "clear" do
  description "Clears the current screen"

  banner <<-BANNER
    Usage: clear

    Clears the screen, ignores any parameters that may be present.
  BANNER

  def process
    _pry_.config.system.call(output, 'clear', _pry_)
  end
end

